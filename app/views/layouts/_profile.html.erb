<div class='navbar navbar-dark bg-dark'>
  <%= link_to 'Тест Гуру', root_path, class: 'navbar-brand' %>

  <span class='navbar-text'>
    <% if user_signed_in? %>
      Привет, <b><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></b> Гуру! |

      <% if current_user.admin? %>
        <%= link_to 'Панель администратора', admin_tests_path, style: request.path.start_with?('/admin') ? 'color: red;' : '' %>
      <% end %> |

      <%= link_to 'Выйти', destroy_user_session_path, method: :delete %>
    <% else %>
      <% if request.path != new_user_session_path %>
        <%= link_to 'Войти', new_user_session_path %>
      <% end %>

      <% if request.path != new_user_session_path && request.path != new_user_registration_path %>
        |
      <% end %>

      <% if request.path != new_user_registration_path %>
        <%= link_to 'Зарегистрироваться', new_user_registration_path %>
      <% end %>
    <% end %>
  </span>
</div>
