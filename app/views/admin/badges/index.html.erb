<%= render 'shared/errors', resource: @badge %>

<div class="table">
  <h2 class="table__title"> <%= t('.header') %> </h2>

  <table class="table__content">
    <thead>
      <tr>
        <th> <%= t('.title') %></th>
        <th> <%= t('.icon') %> </th>
        <th> <%= t('.rule_type') %> </th>
        <th> <%= t('.rule_value') %> </th>
      </tr>
    </thead>

    <tbody>
      <% @badges.each do |badge| %>
        <tr>
          <td> <%= badge.title %> </td>
          <td> <%= image_tag(badge.icon_url, size: "30x30") %> </td>
          <td> <%= badge.rule_type %> </td>
          <td> <%= badge.rule_value %> </td>
          <td> <%= link_to t('.edit'), edit_admin_badge_path(badge), class: 'table__subaction' %> </td>
          <td> <%= link_to t('.delete'), admin_badge_path(badge), method: :delete, class: 'table__subaction' %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new'), new_admin_badge_path, class: 'table__action' %>
</div>
