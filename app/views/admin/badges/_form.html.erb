<%= form_with model: [:admin, @badge], local: true do |form| %>
  <p class="form__field">
    <%= form.label :title  %>
    <%= form.text_field :title, id: :badge_title %>
  </p>

  <p class="form__field">
    <%= form.label :icon_url  %>
    <%= form.url_field :icon_url, id: :badge_icon_url %>
  </p>

  <p class="form__field">
    <%= form.label :rule_type  %>
    <%= form.select :rule_type, Badge::RULES.keys, { include_blank: t('.select') } %>
  </p>

  <p class="form__field">
    <%= form.label :rule_value  %>
    <%= form.select :rule_value,
                    Badge::RULES.flat_map { |k, vs| vs.map { |v| [v, { 'data-rule-type': k }] } },
                    { include_blank: t('.select') },
                    { disabled: true }
    %>
  </p>

  <p class="form__action"> <%= form.submit %> </p>
<% end %>
