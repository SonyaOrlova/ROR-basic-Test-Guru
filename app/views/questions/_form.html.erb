<div class='question-form'>
  <%= form_with model: [@test, @question], local: true do |form| %>
    <h1> <%= question_header %> </h1>
    
    <%= render 'shared/resource_errors', resource: @question %>

    <p>
      <%= form.label :body  %>
      <%= form.text_area :body, id: :question_body  %>
    </p>

    <p> <%= form.submit submit_title %>
  <% end %>
</div>
